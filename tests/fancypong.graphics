            xspeed = xspeed + 20;
            yspeed = yspeed + 2;
            r = random() % 64;
            g = 0;
            b = random() % 64 + 192;
        }
        xdir = 1;
    }
    if((x < 1 * pixelsize) | (x > 699 * pixelsize)){
        x = 3500000;
        y = 2500000;
        lpaddle = 250 * pixelsize;
        rpaddle = 250 * pixelsize;
        xspeed = 150;
    }
    if((x > 674 * pixelsize) & (y > rpaddle - 50 * pixelsize) & (y < rpaddle + 50 * pixelsize)){
