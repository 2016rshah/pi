fun main(){
    long qq = 0;
    long count = 0;
    x = 3500000;
    y = 2500000;
    shape = 4;
    iso = 0;
    isa = 0;
    isq = 0;
    isl = 0;
    startwindow 700 500
    startkeyboarddown
        if(key == 97){
            isa = 1;
